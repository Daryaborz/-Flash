k = 0 # счётчик количества слов
s = 'ДПС' #набор вариантов
for x1 in s: #перебор вариантов для каждой позиции
    for x2 in s:
        for x3 in s:
            for x4 in s:
                for x5 in s:
                    for x6 in s:
                        for x7 in s:
                            k += 1 #счётчик
                            n = x1 + x2 + x3 + x4 + x5 + x6 + x7
                            if n[0] == 'С' and n.count('Д') == 3: #проверка условия
                                print(k)#вывод нужного варианта
